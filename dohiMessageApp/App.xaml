<Application x:Class="WalkieDohi.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WalkieDohi"
             xmlns:util="clr-namespace:WalkieDohi.Util"
             
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/BasicWalkieDohiStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <util:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <util:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>



        </ResourceDictionary>
    </Application.Resources>
</Application>
