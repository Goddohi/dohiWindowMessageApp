<Window x:Class="WalkieDohi.UI.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="설정"
        Height="400" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="설정 메뉴(준비중)" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>


            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="저장" Width="80" Margin="0,0,10,0" Click="Save_Click"/>
                <Button Content="닫기" Width="80" Click="Close_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>