<Window x:Class="WalkieDohi.UI.ToastWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WalkieDohi.UI"
        mc:Ignorable="d"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Loaded="ToastWindow_Loaded"
        ShowInTaskbar="False" Topmost="True" Width="300" Height="100"
        ResizeMode="NoResize">
    <Border Background="#DD333333" CornerRadius="10" Padding="10" Opacity="0.95" MouseLeftButtonDown="Window_MouseLeftButtonDown">
        <StackPanel>
            <TextBlock x:Name="TitleText" FontWeight="Bold" FontSize="16" Foreground="White" />
            <TextBlock x:Name="MessageText" FontSize="14" Foreground="White" TextWrapping="Wrap" />
        </StackPanel>
    </Border>
</Window>
