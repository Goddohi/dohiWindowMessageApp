<Window x:Class="WalkieDohi.UI.MiniGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:games="clr-namespace:WalkieDohi.UC.Games"
        Title="미니게임 센터"
        Height="550" Width="600"
        WindowStartupLocation="CenterOwner">

    <Grid>
        <TabControl>
            <TabItem Header="숫자 맞추기">
                <games:NumberGuessGameControl />
            </TabItem>
            <TabItem Header="점심메뉴사다리(5개)">
                <games:LadderGameControl />
            </TabItem>
            <TabItem Header="벽돌깨기">
                <games:BrickGameControl />
            </TabItem>
            <TabItem Header="스네이크">
                <games:SnakeGameControl />
            </TabItem>
            <TabItem Header="마우스 사격게임">
                <games:ShootingGameControl />
            </TabItem>
            <TabItem Header="도히의 모험(예정)">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"> 출시 준비중...</TextBlock>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
