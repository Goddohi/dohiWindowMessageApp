<Window x:Class="WalkieDohi.UI.MiniGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:games="clr-namespace:WalkieDohi.UC.Games"
        Title="미니게임 센터"
        Height="550" Width="600"
        WindowStartupLocation="CenterOwner">

    <Grid>
        <TabControl>
            <TabItem Header="숫자 맞추기">
                <games:NumberGuessGameControl />
            </TabItem>
            <TabItem Header="점심메뉴사다리(5개)">
                <games:LadderGameControl />
            </TabItem>
            <TabItem Header="(예정) 벽돌깨기">
                <TextBlock Text="준비 중입니다..." HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </TabItem>

            <TabItem Header="(예정) 스네이크">
                <TextBlock Text="준비 중입니다..." HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
