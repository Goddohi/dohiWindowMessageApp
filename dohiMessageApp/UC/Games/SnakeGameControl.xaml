<UserControl x:Class="WalkieDohi.UC.Games.SnakeGameControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             KeyDown="UserControl_KeyDown"
             Focusable="True">
    <StackPanel Margin="10">
        <TextBlock Text="🐍 스네이크 게임" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
        <Canvas x:Name="GameCanvas" Width="400" Height="400" Background="Black" />
        <Button Content="게임 시작" Click="StartButton_Click" Margin="10" Width="100" HorizontalAlignment="Center"/>
        <TextBlock x:Name="ScoreText" Text="점수: 0" FontSize="16" Margin="10" HorizontalAlignment="Center"/>
    </StackPanel>
</UserControl>
