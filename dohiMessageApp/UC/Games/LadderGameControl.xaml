<UserControl x:Class="WalkieDohi.UC.Games.LadderGameControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <StackPanel Margin="20">
        <TextBlock Text="🍱 점심 사다리 타기" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

        <TextBlock Text="메뉴 (쉼표로 구분):"/>
        <TextBox x:Name="MenusInput" Margin="0,5,0,10"/>

        <Button Content="사다리 타기 시작!" Click="RunLadder_Click" Margin="0,10,0,10"/>

        <Canvas x:Name="LadderCanvas" Height="240" Background="#FFEFEFEF" Margin="0,10,0,10"/>

        <TextBlock x:Name="ResultText" Margin="0,20,0,0" FontSize="16" FontWeight="Bold" Foreground="DarkRed" TextAlignment="Center"/>
    </StackPanel>
</UserControl>
