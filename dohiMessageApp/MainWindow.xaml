<Window x:Class="dohiMessageApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dohiMessageApp"
        mc:Ignorable="d"
          Title="도히 메신저" Height="400" Width="600">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>

            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="내 닉네임:" VerticalAlignment="Center" />
            <TextBox x:Name="NicknameBox" Width="150" Height="25" Margin="5,0,10,0"/>
            <Button Content="저장" Width="60" Click="SaveUserButton_Click"/>
            <Label Content=" 보낼사람" VerticalAlignment="Center" />
            <ComboBox x:Name="FriendComboBox"  Width="130" Height="30" DisplayMemberPath="Name" Margin="5,0,10,0"  />
            <Button Content="친구 관리" Width="70" Height="25" Click="ManageFriends_Click"/>
        </StackPanel>


        <!-- 수신 메시지 표시 -->
        <ListBox x:Name="MessageList" Grid.Row="1"  MouseDoubleClick="MessageList_MouseDoubleClick"/>


        <!-- 메시지 입력 영역 -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,10,0,0">
            <TextBox x:Name="InputBox" Width="300" Height="30" Margin="0,0,10,0" KeyDown="InputBox_KeyDown"/>
            <Button Content="보내기" Width="80" Height="30" Click="SendButton_Click"/>
            <Button Content="파일 전송" Margin="20,0,0,0" Width="100" Height="30" Click="SendFileButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
