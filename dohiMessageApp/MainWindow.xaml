<Window x:Class="WalkieDohi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WalkieDohi"
        xmlns:uc="clr-namespace:WalkieDohi.UC"
        mc:Ignorable="d"
        Title="WalkieDohi" Height="600" Width="900">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="10">
            <TextBox x:Name="NicknameBox" Width="150" Margin="0,0,10,0" />
            <Button x:Name="SaveUserButton" Content="닉네임 저장" Click="SaveUserButton_Click" Margin="0,0,10,0"/>
            <Button x:Name="ManageFriendsButton" Content="친구 관리" Click="ManageFriends_Click"/>
        </StackPanel>

        <TabControl x:Name="ChatTabControlHost" Margin="10"/>
    </DockPanel>
</Window>